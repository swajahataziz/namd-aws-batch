{
    "jobDefinitionName": "namd-job-definition",
    "type": "container",
    "parameters": {},
    "containerProperties": {
        "image": "<namd-image-uri>",
        "vcpus": 20,
        "memory": 80000,
        "command": [],
        "jobRoleArn": "arn:aws:iam::<account-id>:role/BatchJobRole",
        "volumes": [
            {
                "host": {
                    "sourcePath": "/scratch"
                },
                "name": "scratch"
            },
            {
                "host": {
                    "sourcePath": "/local"
                },
                "name": "local"
            }
        ],
        "environment": [
            {
                "name": "SCRATCH_DIR",
                "value": "/scratch"
            },
            {
                "name": "OMP_THREADS",
                "value": "2"
            },
            {
                "name": "MPI_THREADS",
                "value": "1"
            },
            {
                "name": "S3_OUTPUT",
                "value": "<Enter address of your S3 bucket>"
            }
        ],
        "mountPoints": [
            {
                "containerPath": "/scratch",
                "sourceVolume": "scratch"
            },
            {
                "containerPath": "/usr/tmp",
                "sourceVolume": "local"
            }
        ],
        "ulimits": [
            {
                "hardLimit": -1,
                "name": "memlock",
                "softLimit": -1
            }
        ],
        "resourceRequirements": [
            {
                "value": "2",
                "type": "GPU"
            }
        ],
        "linuxParameters": {
            "devices": []
        }
    }
}